extends layout 

block content
  div.formContainer
    form.form(action="" method='POST') 
      div.formTitle Create account
      div.formGroup
        label(for="username") Username:
        input(type="text" required='true' name='username' value=(user === undefined ? '' : user.username))
      div.formGroup
        label(for="password") Password:
        input(type="password" required='true' name='password')
      div.formGroup
        label(for="confirmPassword") Confirm password:
        input(type="password" required='true' name='confirmPassword')
      div.formGroup
        label(for="admin") Admin (secret code):
        input(type="number" name='admin') 
      button.formSubmit(type='submit') Sign Up
    if errors
      ul.formErrors
        for error in errors
          li!= error.msg  